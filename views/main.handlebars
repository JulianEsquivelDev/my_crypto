<div class="coin-title-card">
  <div class="card flex-fill" style="width: 18rem;">
    <img
      class="card-img-top"
      src="/images/mc_banner.png"
      alt="Card image cap"
    />
    <div class="card-body">
      <h3 class="card-text">Coin Market</h3>
    </div>
  </div>
</div>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">24</th>
      <th scope="col">7D</th>
      <th scope="col">Market Cap</th>
      <th scope="col">Volume</th>
      <th scope="col">Circulating Supply</th>
    </tr>
  </thead>
  <tbody>
    {{#each coins}}
      <tr>
        <th scope="row">{{data.cmc_rank}}</th>
        <td>{{data.name}}</td>
        <td>{{data.qoute.USD.price}}</td>
        <td>{{data.qoute.USD.percent_change_24h}}</td>
        <td>{{data.qoute.USD.percent_change_7d}}</td>
        <td>{{data.qoute.USD.market_cap}}</td>
        <td>{{data.qoute.USD.volume_24h}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>